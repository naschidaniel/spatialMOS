{
  "development": {
    "collection": "development",
    "docker_compose_files": [
      "./docker-compose.yml",
      "./docker-compose.development.yml"
    ],
    "initFolders": [
      "./data/archive",
      "./data/get_available_data",
      "./data/get_available_data/gefs_reforecast",
      "./data/get_available_data/gefs_reforecast/nwp",
      "./data/spatialmos_climatology",
      "./data/media",
      "./data/postgresdata",
      "./data/postgresdata_backup",
      "./data/postgresdata_backup_server",
      "./data/spool",
      "./data/static",
      "./log/fabric",
      "./log/nginx"
    ],
    "docker": {}
  },
  "production": {
    "collection": "production",
    "initFolders": [
      "./data/.well-known",
      "./data/archive",
      "./data/get_available_data",
      "./data/spatialmos_climatology",
      "./data/media",
      "./data/postgresdata",
      "./data/postgresdata_backup",
      "./data/postgresdata_backup_server",
      "./data/spool",
      "./data/static",
      "./log/fabric",
      "./log/nginx"
    ],
    "docker": {
      "USERID": "1001",
      "GROUPID": "1001",
      "INSTALLFOLDER": "/www/spatialMOS",
      "HOST": "production",
      "DOCKER_TLS_VERIFY": "1",
      "DOCKER_HOST": "tcp://example@example.com:2376",
      "DOCKER_CERT_PATH": "./fabric/cert/"
    },
    "postgres_backup_server_folder": "./postgresdata_backup_server",
    "docker_compose_files": [
      "./docker-compose.yml",
      "./docker-compose.production.yml"
    ],
    "REMOTE_USER": "example",
    "REMOTE_HOST": "example.com",
    "rsync_push": {
      "sourcefiles": {
        "local_dir": ".",
        "remote_dir": "/www/spatialMOS",
        "include": [
          "fabric/cert/ca.pem",
          "fabric/cert/cert.pem",
          "fabric/cert/key.pem",
          "settings.json",
          "task.py"
        ],
        "exclude": [
          "*.git*",
          ".pylintrc",
          ".editorconfig"
        ],
        "exclude-from": [
          ".gitignore"
        ]
      },
      "climatologies": {
        "local_dir": "./data",
        "remote_dir": "/www/spatialMOS/",
        "ignore-existing": "True",
        "include": [
          "get_available_data/gadm",
          "spatialmos_climatology/gam/"
        ],
        "exclude": [
          "get_available_data/*",
          "*.h5",
          "*.RData",
          "*_station_observations.csv",
          "archive",
          "media",
          "postgresdata",
          "bostgresdata_backup",
          "postgresdata_backup_server",
          "static"
        ]
      }
    }
  }
}
